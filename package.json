{
    "name": "floating",
    "version": "1.0.0",
    "description": "一个可爱的桌面宠物应用",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --inspect",
        "test:node": "node scripts/simple-test.js",
        "dist": "electron-builder"
    },
    "keywords": [
        "electron",
        "desktop-pet"
    ],
    "author": "",
    "license": "MIT",
    "build": {
        "appId": "com.float-team.floating",
        "productName": "Floating",
        "files": [
            "src/**/*",
            "data/pet-state.json",
            "package.json"
        ],
        "directories": {
            "output": "release"
        },
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "electron-store": "^11.0.2"
    }
}